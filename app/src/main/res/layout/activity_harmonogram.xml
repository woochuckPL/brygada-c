<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="85dp"
            android:layout_height="wrap_content"
            android:background="#000000"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dp"
                android:layout_marginTop="1dp"
                android:layout_marginRight="1dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtWeek"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="1dp"
                    android:background="#FFFFFF"
                    android:paddingLeft="2dp"
                    android:text="@string/txtWeek"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/txtMonth"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="1dp"
                    android:background="#FFFFFF"
                    android:paddingLeft="2dp"
                    android:text="@string/txtMonth"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/txtDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="1dp"
                    android:background="#FFFFFF"
                    android:paddingLeft="2dp"
                    android:text="@string/txtDate"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/txtDay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="1dp"
                    android:background="#FFFFFF"
                    android:paddingLeft="2dp"
                    android:text="@string/txtDay"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/txtEmp0"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="1dp"
                    android:background="#FFFFFF"
                    android:paddingLeft="2dp"
                    android:text="@string/txtEmp0"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/txtEmp1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="1dp"
                    android:background="#FFFFFF"
                    android:paddingLeft="2dp"
                    android:text="@string/txtEmp1"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/txtEmp2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="1dp"
                    android:background="#FFFFFF"
                    android:paddingLeft="2dp"
                    android:text="@string/txtEmp2"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/txtEmp3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="1dp"
                    android:background="#FFFFFF"
                    android:paddingLeft="2dp"
                    android:text="@string/txtEmp3"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/txtEmp4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="1dp"
                    android:background="#FFFFFF"
                    android:paddingLeft="2dp"
                    android:text="@string/txtEmp4"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/txtEmp5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="1dp"
                    android:background="#FFFFFF"
                    android:paddingLeft="2dp"
                    android:text="@string/txtEmp5"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/txtEmp6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="1dp"
                    android:background="#FFFFFF"
                    android:paddingLeft="2dp"
                    android:text="@string/txtEmp6"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/txtEmp7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="1dp"
                    android:background="#FFFFFF"
                    android:paddingLeft="2dp"
                    android:text="@string/txtEmp7"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/txtEmp8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="1dp"
                    android:background="#FFFFFF"
                    android:paddingLeft="2dp"
                    android:text="@string/txtEmp8"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/txtEmp9"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="1dp"
                    android:background="#FFFFFF"
                    android:paddingLeft="2dp"
                    android:text="@string/txtEmp9"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/txtEmp10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="1dp"
                    android:background="#FFFFFF"
                    android:paddingLeft="2dp"
                    android:text="@string/txtEmp10"
                    android:textColor="#000000" />

            </LinearLayout>

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/dayRecycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <ProgressBar
        android:id="@+id/progressBarHarmonogram"
        android:layout_gravity="center"
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btnUpdate"
        android:onClick="onClickBtnUpdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        android:text="Aktualizuj"/>

</LinearLayout>